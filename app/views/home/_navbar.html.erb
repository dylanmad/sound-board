    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"nav-btn" %>
</li>

<li class="nav-item">
    <%= link_to "Profile", "users/edit", method: :get, class:"nav-btn", target: "_blank" %>
</li>




</div>
