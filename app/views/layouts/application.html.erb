<!DOCTYPE html>
<html>
  <head>
    <title>SoundBoard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'style.css', as: 'style', crossorigin: 'anonymous' %>
    <%= javascript_importmap_tags %>
    <%= javascript_pack_tag 'application', as: 'script', crossorigin: 'anonymous', defer: true  %>
    
  </head>

  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <% if !(user_signed_in?) %>
      <a href="/users/sign_in">Sign in</a>
    <% end %>

    <%= yield %>
  </body>

</html>
